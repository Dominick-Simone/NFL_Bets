                </div>
                <div class="col text-center">
                    Points
                </div>
                <div class="col">
                    Favorite Team
                </div>
            </div>
        </div>
        <div class="container" id="leaderboard__container-inner">
            {{#each users as |user|}}
                <div class="row ms-2" id="user-details-user">
                    {{> user-details user}}
                </div>       
                    {{else}}
        
