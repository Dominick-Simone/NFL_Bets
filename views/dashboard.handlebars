<div class="grid__container">
    <div class="grid__container-1 grid-item shadow p-3 mb-5 bg-body rounded">
        <header class="fav__header"> Favorite Team's Games </header>
            <div class="container" id="fav__container">
                <div class="row" id="fav__header">
                    <div class="col text-center">
                        Home Team
                    </div>
                    <div class="col text-center">
                        Away Team
                    </div>
                </div>
            </div>
            <div class="container" id="leaderboard__container-inner">
                {{#each games as |game|}}
                    <div class="row" id="game-details-game">
                    {{> game-details game}}
                    </div>
                    {{/each}}
            </div>
    </div>
