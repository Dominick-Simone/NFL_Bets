<form class="sign-up-form">
  <div class="card-body text-center">
    <h1>Create Account</h1>
      <div class="input-group mb-3">
          <input type="email" class="form-control" id="signupInputEmail" aria-describedby="emailHelp" placeholder="Enter email">
      </div>
      <div class="input-group mb-3">
          <input type="username" class="form-control" id="signupInputUsername" placeholder="Username">
      </div>
      <div class="input-group mb-3">
        <input type="password" class="form-control" id="signupInputPassword" placeholder="Password">
      </div>
      <div class="input-group mb-3">
        <input type="fav_team" class="form-control" id="signupInputFavTeam" placeholder="Favorite Team">
      </div>
      <div class="card-footer bg-transparent border-success">
          <button class="btn btn-primary me-md-2" type="submit">Create Account!</button>
      </div>
  </div>
</form>

<script src="/js/signup.js"></script>